{
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/invoice-worker",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "src/**"
    }
  },
  "routes": [
    {
      "src": "/sw\\.js",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "continue": true
    },
    {
      "src": "/manifest\\.webmanifest",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "silent": false,
    "autoAlias": true
  }
}
