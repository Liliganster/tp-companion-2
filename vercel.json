{
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/invoice-worker",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/|assets/|sw\\.js$|workbox-.*\\.js$|manifest\\.webmanifest$|favicon\\.ico$|logo\\.svg$).*)",
      "destination": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "silent": false,
    "autoAlias": true
  }
}
