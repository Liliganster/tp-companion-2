{
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/invoice-worker",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "src/**"
    }
  },
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    },
    {
      "source": "/manifest.webmanifest",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "silent": false,
    "autoAlias": true
  }
}